.row.wrapper.border-bottom.white-bg.page-heading
  .col-lg-10
    %h2
      Contactos Registrados
      = @empresa.present? ? ' del '+@empresa.denominacion : nil
      %i.fa.fa-bars

    %ol.breadcrumb
      %li
        = link_to 'Inicio', root_url
      %li
        = link_to 'Contactos Registrados', contactos_path
      %li
        Contactos Registrados

.wrapper.wrapper-content.animated.fadeInRight#pagina_contactos
  - if @contactos.blank?
    .row
      .col-lg-12
        .ibox.float-e-margins
          .ibox-content
            .row
              .col-sm-6.col-md-offset-4
                %h3 No existen registros de contactos para la empresa
  -else
    = render 'table_contactos', object: @contactos