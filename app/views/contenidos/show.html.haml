.row.wrapper.border-bottom.white-bg.page-heading
  .col-sm-10
    %h2
      %i.fa.fa-home
      -#= current_user.unidad_ordenacion.reserva_forestal.nombre rescue 'Reserva'
      -#\- Cuencas
    %ol.breadcrumb
      %li
        = link_to 'Inicio', root_url
      %li.active
        %strong
          Contenido
.wrapper.wrapper-content.animated.fadeInRight
  .row
    .col-lg-12.col-md-12.col-sm-12.col-xs-12
      .ibox.float-e-margins
        .ibox-title
          %h3
            Edición de Contenido
        .ibox-content
          .row
            .col-sm-5
              %table.table.table-striped.table-bordered.table-condensed
                %tbody
                  %tr
                    %td.text-right
                      %strong Institución:
                    %td
                      = @contenido.empresa.denominacion
                  %tr
                    %td.text-right
                      %strong Titulo:
                    %td
                      = @contenido.titulo
                  %tr
                    %td.text-right
                      %strong Autor:
                    %td
                      = @contenido.autor
                  %tr
                    %td.text-right
                      %strong Descripcion:
                    %td
                      = @contenido.descripcion
                  %tr
                    %td.text-right
                      %strong Palabras Claves:
                    %td
                      = @contenido.palabras_claves
                  %tr
                    %td.text-right
                      %strong Tipo de Contenido:
                    %td
                      = @contenido.tipo_contenido.nombre
                  %tr
                    %td.text-right
                      %strong Tipo de Archivo:
                    %td
                      = @contenido.tipo_archivo
                  %tr
                    %td.text-right
                      %strong Url del Archivo:
                    %td
                      = @contenido.nombre_archivo
