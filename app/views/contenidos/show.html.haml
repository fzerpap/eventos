          .row
            .col-sm-3
              = link_to contenidos_path, class: 'btn btn-success' do
                %i.fa.fa-arrow-left
                Regresar
            .col-sm-3
              = link_to edit_contenido_path(@contenido), class: 'btn btn-primary' do
                Editar
                %i.fa.fa-edit

