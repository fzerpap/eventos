.row
  .col-lg-12
    .ibox.float-e-margins
      .ibox-content
        .row
          .col-sm-3
            = link_to({controller: "grupos", action: "new"}, {class: 'btn btn-primary btn-responsive'}) do
              Nuevo Grupo
              %i.fa.fa-plus
        %br
        %br
        .row
          .col-md-6
            .table-responsive
              %table.table.table-striped.table-bordered.table-hover.datatable-table
                %thead.blue-bg
                  %tr
                    %th Grupo
                    %th Acciones
                    %th Contactos
                %tbody
                  - @grupos.each do |grupo|
                    %tr
                      %td
                        = grupo.nombre
                      %td
                        = link_to grupo, data: { confirm: '¿Está seguro de eliminar el contacto?' }, method: :delete, 'data-toggle'=> 'tooltip', 'data-placement' => 'left',  'title' => 'Eliminar' do
                          %i.fa.fa-trash.fa-2x
                      %td
                        = link_to(controller: 'grupos', action: 'edit', id: grupo.id )  do
                          %i.fa.fa-edit.fa-2x