.row
  .col-lg-12
    .ibox.float-e-margins
      .ibox-content
        .row
          .col-sm-3
            = button_tag class: 'btn btn-primary btn-responsive', id: 'btn_agregar_invitado' do
              Agregar Invitado
              %i.fa.fa-plus
          .col-sm-3.col-md-offset-6
            = link_to delete_invitados_path( evento_id: @evento.id), data: { confirm: '¿Está seguro de realizar esta eliminar toda la lista?' }, class: 'btn btn-primary btn-responsive'  do
              Eliminar Lista de Invitados
              %i.fa.fa-trash
        %br/
        %br/
        .row
          .col-md-12
            .table-responsive
              %table.table.table-striped.table-bordered.table-hover.datatable-table
                %thead.blue-bg
                  %tr
                    %th Nombres
                    %th Apellidos
                    %th Doc. Identidad
                    %th Email
                    %th Telefono
                    %th Fecha invitacion
                    %th
                %tbody
                  - @invitados.each do |invitado|
                    %tr
                      %td= invitado.contacto.nombres
                      %td= invitado.contacto.apellidos
                      %td= invitado.contacto.doc_identidad
                      %td= invitado.contacto.email
                      %td= invitado.contacto.telefono
                      %td= invitado.fecha_invitacion.strftime("%d-%m-%Y")
                      %td
                        = link_to invitado,  rel: 'tooltip',  title: 'Ver' do
                          %i.fa.fa-search
                          &nbsp;
                          &nbsp;
                        = link_to edit_invitado_path(invitado), 'data-toggle'=> 'tooltip', 'data-placement' => 'left',  'title' => 'Editar' do
                          %i.fa.fa-edit
                          &nbsp;
                          &nbsp;
                        = link_to invitado, data: { confirm: '¿Está seguro de realizar esta acción?' }, method: :delete, 'data-toggle'=> 'tooltip', 'data-placement' => 'left',  'title' => 'Eliminar' do
                          %i.fa.fa-trash
                      %td