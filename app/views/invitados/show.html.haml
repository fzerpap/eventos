.row.wrapper.border-bottom.white-bg.page-heading
  .col-sm-10
    %h2
      %i.fa.fa-bars
    %ol.breadcrumb
      %li
        = link_to 'Inicio', root_url
      %li
      %li.active
        %strong
.wrapper.wrapper-content.animated.fadeInRight
  .row
    .col-lg-12.col-md-12.col-sm-12.col-xs-12
      .ibox.float-e-margins
        .ibox-title
          %h3
            invitado
        .ibox-content
          .row
            .col-sm-5
              %table.table.table-striped.table-bordered.table-condensed
                %tbody
                  %tr
                    %td.text-right
                      %strong Fecha invitacion:
                    %td
                      = @invitado.fecha_invitacion
                  %tr
                    %td.text-right
                      %strong Fecha confirmacion:
                    %td
                      = @invitado.fecha_confirmacion
                  %tr
                    %td.text-right
                      %strong Tipo confirmacion:
                    %td
                      = @invitado.tipo_confirmacion
                  %tr
                    %td.text-right
                      %strong Contactos:
                    %td
                      = @invitado.contactos
                  %tr
                    %td.text-right
                      %strong Eventos:
                    %td
                      = @invitado.eventos
          .row
            .col-sm-3
              = link_to invitados_path, class: 'btn btn-success' do
                %i.fa.fa-arrow-left
                Regresar
            .col-sm-3
              = link_to edit_invitado_path(@invitado), class: 'btn btn-primary' do
                Editar
                %i.fa.fa-edit