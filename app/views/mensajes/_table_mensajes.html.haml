.row
  .col-lg-12
    .ibox.float-e-margins
      .ibox-content
        .row
          .col-sm-3
            = button_tag id: 'btn_nuevo_mensaje',class: 'btn btn-primary btn-responsive' do
              Nuevo Mensaje
              %i.fa.fa-plus
        %br
        %br
        .row
          .col-md-12
            .table-responsive
              %table.table.table-striped.table-bordered.table-hover.datatable-table
                %thead.blue-bg
                  %tr
                    %th Asunto
                    %th Incluye Nro. Asiento
                    %th Incluye datos del Coordinador
                    %th Evento
                    %th Acciones
                %tbody
                  - @mensajes.each do |mensaje|
                    %tr
                      %td= mensaje.asunto
                      %td= mensaje.asiento? ? 'Si' : 'No'
                      %td= mensaje.coordinador? ? 'Si' : 'No'
                      %td= mensaje.evento.nombre
                      %td
                        = link_to evento_mensaje_path(evento_id: mensaje.evento_id,id: mensaje.id),  rel: 'tooltip',  title: 'Ver' do
                          %i.fa.fa-search
                          &nbsp;
                          &nbsp;
                        = link_to edit_evento_mensaje_path(evento_id: mensaje.evento_id,id: mensaje.id), 'data-toggle'=> 'tooltip', 'data-placement' => 'left',  'title' => 'Editar' do
                          %i.fa.fa-edit
                          &nbsp;
                          &nbsp;
                        = link_to evento_mensaje_path(evento_id: mensaje.evento_id,id: mensaje.id), data: { confirm: 'Â¿EstÃ¡ seguro de realizar esta acciÃ³n?' }, method: :delete, 'data-toggle'=> 'tooltip', 'data-placement' => 'left',  'title' => 'Eliminar' do
                          %i.fa.fa-trash