- if user_signed_in?
  .wrapper.wrapper-content.animated.fadeInRight
    .row
      .col-lg-12.text-center
        %h3.small-logo-name
          = current_user.empresa.denominacion rescue 'Empresa'
    .row
      .col-lg-12.text-center
        %h3.small-logo-letters
          Bienvenido
- else
  .section
    #myCarousel.carousel.slide
      %ol.carousel-indicators
        %li.active{"data-slide-to" => "0", "data-target" => "#carousel2"}
        %li{"data-slide-to" => "1", "data-target" => "#carousel2"}
        %li{"data-slide-to" => "2", "data-target" => "#carousel2"}
      .carousel-inner
        .item.active
          %img.img-responsive{:alt => "image", :src => image_path('p_big2.jpg')}
            .carousel-caption
              %h1 GESTI&Oacute;N
        .item
          %img.img-responsive{:alt => "image", :src => image_path('p_big3.jpg')}
            .carousel-caption
              %h1 CONT&Aacute;CTENOS
        .item
          %img.img-responsive{:alt => "image", :src => image_path('p_big1.jpg')}
            .carousel-caption
              %h1 EVENTOS
      %a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel"}
        %span.icon-prev
      %a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel"}
        %span.icon-next
