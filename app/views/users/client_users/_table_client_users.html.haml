.row
  .col-lg-12
    .ibox.float-e-margins
      .ibox-content
        .row
          .col-sm-3
            = link_to new_client_user_path, class: 'btn btn-primary ' do
              Nuevo Usuario de la Institución
              %i.fa.fa-plus
        %br
        .row
          .col-md-12
            .table-responsive
              %table.table.table-striped.table-bordered.table-hover
                %thead
                  %tr
                    %th Avatar
                    %th Username
                    %th Email
                    %th Nombre
                    %th Teléfono Celular
                    %th Institución
                    %th Rol
                    %th Acciones
                %tbody
                  - @users.each do |user|
                    %tr
                      %td.text-center= image_tag user.avatar.url || 'users.png'
                      %td= user.username
                      %td= user.email
                      %td= user.name
                      %td= user.cellphone
                      %td= user.empresa.denominacion rescue nil
                      %td= user.role.name_type
                      %td
                        = link_to edit_client_user_path(user) do
                          %i.fa.fa-pencil-square-o
                          Editar
                        &nbsp;
                        &nbsp;
                        &nbsp;
                        = link_to client_user_path(user), data: { confirm: "Seguro que desea eliminar al usuario #{user.username}?" }, method: :delete do
                          %i.fa.fa-trash
                          Eliminar